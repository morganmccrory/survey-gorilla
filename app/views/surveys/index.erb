<div class="container">
  <h2>Welcome, <%= @user.name.capitalize %></h2>
  <br>
  <h3>Choose a Survey to Take:</h3>
  <table>
    <thead>
      <th>Title</th>
      <th># of Questions</th>
      <th># of Times Taken</th>
      <th>Link</th>
    </thead>

    <tbody>
      <% @surveys.each do |survey|%>
      <tr>
        <td><%=survey.title%></td>
        <td><%= survey.questions.size %></td>
        <td><%= survey.completions.size %></td>
        <td><a href='surveys/<%=survey.id%>'>Take Survey</a></td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <form method="get" action="/surveys">
      <button class="welcome_buttons" type="submit">View Surveys to Take</button>
  </form>

  <form method="get" action="/surveys/create">
      <button class="welcome_buttons" type="submit">Create a New Survey</button>
  </form>
</div>
